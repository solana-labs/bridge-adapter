{
  "name": "@solana/bridge-adapter-react",
  "version": "0.1.1",
  "license": "SEE LICENSE IN ../../../LICENSE",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    },
    "./esm": {
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    }
  },
  "main": "./esm/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "dist/**",
    "esm/**",
    "src/**"
  ],
  "scripts": {
    "build/dist": "tsup src/index.tsx --env.ESM_ONLY true --external react",
    "build-core/browser": "pnpm build/dist --platform=browser",
    "build-core/esm": "tsc --build tsconfig.esm.json --verbose",
    "build-core": "pnpm run build-core/esm",
    "clean": "./clean.sh",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "pnpm run test-fn && pnpm run test-types",
    "test-fn": "vitest src/__tests__/**.test.*",
    "test-types": "tsc --noEmit"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": true
    },
    "extends": [
      "bridge-adapter-sdk",
      "plugin:@tanstack/eslint-plugin-query/recommended"
    ],
    "rules": {
      "@next/next/no-img-element": "off"
    }
  },
  "dependencies": {
    "@solana/bridge-adapter-base": "^0.1.1",
    "@solana/bridge-adapter-core": "^0.1.0",
    "roarr": "^7.15.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/parser": "^6.2.1",
    "bridge-adapter-sdk-tsconfig": "^0.2.0",
    "debug": "^4.3.4",
    "eslint": "^8.29.0",
    "eslint-config-bridge-adapter-sdk": "^0.1.0",
    "global-jsdom": "^9.1.0",
    "immer": "^10.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.0.0",
    "tsx": "^3.12.8",
    "typescript": "^5.1.3",
    "viem": "^1.4.1",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "wagmi": "^1.3.9"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-react": "^0.15.32",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^1.4.1",
    "wagmi": "^1.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
