{
  "name": "bridge-adapter-react",
  "version": "0.1.0",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "dist/index",
      "types": "dist/index"
    }
  },
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --env.ESM_ONLY true --external react",
    "build-packages": "pnpm build --silent",
    "clean": "./clean.sh",
    "dev": "tsup src/index.tsx --env.ESM_ONLY true --external react --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "BABEL_ENV=unit vitest src/__tests__/**.test.*"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": true
    },
    "extends": [
      "bridge-adapter-sdk",
      "plugin:@tanstack/eslint-plugin-query/recommended"
    ],
    "rules": {
      "@next/next/no-img-element": "off"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@thirdweb-dev/chain-icons": "^1.0.5",
    "bridge-adapter-base": "^0.1.0",
    "class-variance-authority": "^0.6.1",
    "clsx": "^1.2.1",
    "cmdk": "^0.2.0",
    "encoding": "^0.1.13",
    "immer": "^10.0.2",
    "lokijs": "^1.5.12",
    "lucide-react": "^0.252.0",
    "react-error-boundary": "^4.0.10",
    "react-window": "^1.8.9",
    "roarr": "^7.15.1",
    "tailwind-merge": "^1.13.2",
    "valibot": "^0.3.0",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.14",
    "@babel/preset-react": "^7.22.5",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "@solana/web3.js": "^1.78.0",
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@tanstack/react-query": "^4.29.19",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.6",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "ava": "^5.3.1",
    "babel-jest": "^29.7.0",
    "bridge-adapter-sdk-tsconfig": "^0.0.0",
    "debug": "^4.3.4",
    "eslint": "^8.29.0",
    "eslint-config-bridge-adapter-sdk": "^0.0.0",
    "ethers": "^5.7.2",
    "global-jsdom": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "postcss": "8.4.24",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind": "^4.0.0",
    "tailwindcss": "3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "tsup": "^7.0.0",
    "tsx": "^3.12.8",
    "typescript": "^5.1.3",
    "viem": "^1.4.1",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "wagmi": "^1.3.9"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-react": "^0.15.32",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "@solana/web3.js": "^1.78.0",
    "@tanstack/react-query": "^4.29.19",
    "ethers": "^5.7.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^1.4.1",
    "wagmi": "^1.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
