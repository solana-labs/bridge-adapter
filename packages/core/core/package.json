{
  "name": "@solana/bridge-adapter-core",
  "version": "0.1.0",
  "license": "SEE LICENSE IN ../../../LICENSE",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./esm": {
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --env.ESM_ONLY true",
    "build-core/dist": "pnpm build --platform=browser",
    "build-core/esm": "tsc --build tsconfig.esm.json --verbose",
    "build-core": "pnpm run build-core/dist && pnpm run build-core/esm",
    "clean": "./clean.sh",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "pnpm run test-types",
    "test-types": "tsc --noEmit"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": true
    },
    "extends": [
      "bridge-adapter-sdk"
    ]
  },
  "dependencies": {
    "@solana/wallet-adapter-base": "^0.9.23"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.78.0",
    "bridge-adapter-sdk-tsconfig": "^0.1.1",
    "debug": "^4.3.4",
    "eslint": "^8.29.0",
    "eslint-config-bridge-adapter-sdk": "^0.0.0",
    "ethers": "^5.7.2",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "undici": "^5.22.1",
    "viem": "^1.4.1"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.78.0",
    "ethers": "^5.7.2",
    "viem": "^1.4.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
