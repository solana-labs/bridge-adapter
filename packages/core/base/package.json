{
  "name": "@solana/bridge-adapter-base",
  "version": "0.1.0",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "dist/index",
      "types": "dist/index.d.ts"
    }
  },
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --env.ESM_ONLY true",
    "build-packages": "pnpm build --silent",
    "clean": "./clean.sh",
    "dev": "tsup src/index.tsx --env.ESM_ONLY true --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "pnpm run test-types",
    "test-types": "tsc --noEmit",
    "test-unit": "ava src"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": true
    },
    "extends": [
      "bridge-adapter-sdk"
    ]
  },
  "dependencies": {
    "@allbridge/bridge-core-sdk": "^3.0.0",
    "@certusone/wormhole-sdk": "^0.10.4",
    "@mayanfinance/swap-sdk": "^4.2.3",
    "@solana/spl-token": "^0.3.8",
    "csv42": "^4.0.0",
    "valibot": "^0.3.0"
  },
  "devDependencies": {
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/web3.js": "^1.78.0",
    "bridge-adapter-sdk-tsconfig": "^0.0.0",
    "eslint": "^8.29.0",
    "eslint-config-bridge-adapter-sdk": "^0.0.0",
    "ethers": "^5.7.2",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "undici": "^5.22.1",
    "viem": "^1.4.1"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.78.0",
    "ethers": "^5.7.2",
    "viem": "^1.4.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
