{
  "name": "@solana/bridge-adapter-base-ui",
  "version": "0.1.0",
  "license": "SEE LICENSE IN ../../../LICENSE",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./esm": {
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --env.ESM_ONLY true --external react",
    "build-core/dist": "pnpm build --platform=browser",
    "build-core/esm": "tsc --build tsconfig.esm.json --verbose",
    "build-core": "pnpm run build-core/dist && pnpm run build-core/esm",
    "clean": "./clean.sh",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "pnpm run test-fn && pnpm run test-types",
    "test-fn": "vitest src/__tests__/**.test.*",
    "test-types": "tsc --noEmit"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": true
    },
    "extends": [
      "bridge-adapter-sdk"
    ],
    "rules": {
      "@next/next/no-img-element": "off"
    }
  },
  "dependencies": {
    "@solana/bridge-adapter-base": "^0.1.0",
    "@solana/bridge-adapter-react": "^0.1.0",
    "cmdk": "^0.2.0",
    "immer": "^10.0.2",
    "lokijs": "^1.5.12",
    "react-error-boundary": "^4.0.10",
    "react-window": "^1.8.9"
  },
  "devDependencies": {
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "@solana/web3.js": "^1.78.0",
    "@tanstack/react-query": "^4.29.19",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "bridge-adapter-sdk-tsconfig": "^0.1.1",
    "eslint": "^8.29.0",
    "eslint-config-bridge-adapter-sdk": "^0.0.0",
    "ethers": "^5.7.2",
    "prettier": "^2.8.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.0.0",
    "tsx": "^3.12.8",
    "typescript": "^5.1.3",
    "viem": "^1.4.1",
    "wagmi": "^1.3.9"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-react": "^0.15.32",
    "@solana/wallet-adapter-wallets": "^0.19.22",
    "@solana/web3.js": "^1.78.0",
    "@tanstack/react-query": "^4.29.19",
    "ethers": "^5.7.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^1.4.1",
    "wagmi": "^1.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
