{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "_build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "build-core": {
      "cache": false,
      "outputs": ["dist/**", "esm/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build-core"]
    },
    "build-esm": {
      "outputs": ["esm/**"],
      "dependsOn": ["^build-core", "^build-esm"]
    },
    "build-packages": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build-core", "^build-packages"]
    },
    "build-pkg": {
      "dependsOn": ["^build-core", "^build-pkg"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["^build-core", "^build-pkg"]
    },
    "clean": {
      "cache": false
    },
    "build-demo": {
      "cache": false,
      "outputs": [".next/**"],
      "dependsOn": ["^build-core", "^build-pkg"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": ["dist/**", "esm/**"],
      "dependsOn": ["build-pkg"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build-pkg"]
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_ALCHEMY_API_KEY",
    "NEXT_PUBLIC_ETHEREUM_BASE_EXPLORER_URL",
    "NEXT_PUBLIC_INFURA_API_KEY",
    "NEXT_PUBLIC_LOG_LEVEL",
    "NEXT_PUBLIC_SOLANA_BASE_EXPLORER_URL",
    "NEXT_PUBLIC_SOLANA_RPC_URL",
    "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID",
    "NODE_ENV"
  ]
}
